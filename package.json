{
  "name": "kdex",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=10"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "lint:sol": "hardhat check",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "security:audit": "npm audit --audit-level=moderate",
    "security:audit:fix": "npm audit fix --audit-level=moderate --dry-run",
    "security:check": "npm run security:audit && npm run security:deps",
    "security:deps": "node scripts/check-deps.js",
    "security:update": "npm run security:check && npm update --dry-run",
    "preinstall": "node scripts/pre-install-security.js",
    "postinstall": "npm run security:audit"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "dotenv": "^17.2.1",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "react": "^19.1.0",
    "react-apexcharts": "^1.7.0",
    "react-blockies": "^1.4.1",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "reselect": "^5.1.1",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomiclabs/hardhat-solhint": "^4.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^3.2.4",
    "chai": "^4.5.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "ethers": "^6.15.0",
    "globals": "^16.3.0",
    "hardhat": "^2.26.1",
    "jsdom": "^26.1.0",
    "solhint": "^6.0.0",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
